<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsuir.quiz">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz">
        <activity
            android:name=".ui.PieChartActivity"
            android:parentActivityName=".ui.TopicActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.TopActivity"
            android:parentActivityName=".ui.TopicActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2799186949781090~9835347947" />

        <activity android:name=".ui.QuestionActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.TopicActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.SplashActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>